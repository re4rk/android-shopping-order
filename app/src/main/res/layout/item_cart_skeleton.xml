<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/skeleton_light_gray"
    android:padding="16dp">

    <View
        android:id="@+id/skeleton_title"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@color/skeleton_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <View
        android:id="@+id/skeleton_img"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:background="@color/skeleton_gray"
        app:layout_constraintEnd_toStartOf="@id/skeleton_detail1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_title" />

    <View
        android:id="@+id/skeleton_detail1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@color/skeleton_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/skeleton_img"
        app:layout_constraintTop_toBottomOf="@id/skeleton_title" />

    <View
        android:id="@+id/skeleton_detail2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/skeleton_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/skeleton_img"
        app:layout_constraintTop_toBottomOf="@id/skeleton_detail1" />

    <View
        android:id="@+id/skeleton_detail3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/skeleton_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/skeleton_img"
        app:layout_constraintTop_toBottomOf="@id/skeleton_detail2" />

</androidx.constraintlayout.widget.ConstraintLayout>
