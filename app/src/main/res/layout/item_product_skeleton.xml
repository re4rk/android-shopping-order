<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/skeleton_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/skeleton_light_gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/skeleton_name"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginVertical="8dp"
        android:background="@color/skeleton_light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_img"
        app:layout_constraintWidth_percent="0.9" />

    <View
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginVertical="8dp"
        android:background="@color/skeleton_light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_name"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>
